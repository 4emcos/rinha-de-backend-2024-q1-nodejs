{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true
  }
}
